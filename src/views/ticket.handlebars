<div
    style="width:600px; height:auto; display:grid; grid-template-columns:  1; grid-column-gap: 5px;grid-row-gap: 2px; margin-left:auto; margin-right:auto; border: 2px solid #000000; padding:5px;">

    <h2 style="text-align: center; width:500px"><b>Ticket / comprobante de compra</b></h2>

    <div style=" height: auto; margin-left:auto; margin-right:auto; margin-top: 20px; display: grid;">

        <p><b>Comprobante de pago#:</b> {{code}}</p>
        <p style="margin-top: 1px;"><b>Fecha:</b> {{date}}</p>
        <p style="margin-top: 1px;"><b>Total pagado:</b> ${{total}}</p>
        <p style="margin-top: 1px;"><b>Email:</b> {{client}}</p>
    </div>

    <div>
        <h3 style="text-align:center;">Productos</h3>
        <div style="display: grid; grid-template-columns: 40% 20% 40%; width: 550px; margin: auto">
            <div><b>Producto</b></div>
            <div><b>Status</b></div>
            <div><b>Notas</b></div>
            {{#each purchased}}
            <div>{{id}}</div>
            <div>Comprado</div>
            <div>N/A</div>
            {{/each}}
            {{#each rejected}}
            <div>{{id}}</div>
            <div>No comprado</div>
            <div>{{reason}}</div>
            {{/each}}

        </div>
    </div>

    <div>
        <h4 style="text-align: center;">Total pagado: ${{total}}</h4>
        <p style="text-align: center; font-size: 20px; text-decoration:underline">Gracias por su compra!</p>
    </div>

</div>